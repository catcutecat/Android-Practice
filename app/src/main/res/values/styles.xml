<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Widget styles -->

    <style name="Widget.UIAssignment" parent="@android:style/Widget.Material" />

    <style name="Widget.UIAssignment.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.UIAssignment.SiteCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">?colorSecondary</item>
    </style>

    <style name="Widget.UIAssignment.SingleLine">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.UIAssignment.Info">
        <item name="android:drawablePadding">@dimen/margin_normal</item>
        <item name="android:drawableTop">@drawable/ic_info</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

</resources>